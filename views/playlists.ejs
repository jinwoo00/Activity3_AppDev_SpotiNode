<main>
    <% if (playlists.length > 0) { %>
        <h2>Available Playlists</h2>
        <ol>
            <% playlists.forEach((playlist, index) => { %>
                <li>
                    <strong><%= playlist.name %></strong>: <%= playlist.description %>
                    <div class="dropdown">
                        <button class="dropdown-button">=</button>
                        <div class="dropdown-content">
                            <button class="view-songs-button" onclick="window.location.href='/playlists/<%= playlist.id %>'">
                                View Songs
                            </button>
                            <form action="/delete-playlist/<%= playlist.id %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this playlist?')">Delete Playlist</button>
                            </form>
                        </div>
                    </div>
                </li>
            <% }) %>
        </ol>
    <% } else { %>
        <p>No playlists available.</p>
    <% } %>
    <button class="back-button"><a href="/">Back to Home</a></button>
</main>